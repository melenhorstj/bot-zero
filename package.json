{
  "name": "bot-zero",
  "version": "0.0.1",
  "private": true,
  "author": "Wehkamp (kbakker@wehkamp.nl)",
  "description": "An 'empty' bot that can be the start for your own bot.",
  "dependencies": {
    "axios": "^0.18.0",
    "dotenv": "^6.0.0",
    "hubot": "^3.0.1",
    "hubot-command-mapper": "^1.3.3",
    "hubot-help": "^0.2.2",
    "hubot-slack": "^4.5.3"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "chai": "^4.1.2",
    "hubot-pretend": "^1.2.0",
    "husky": "^1.0.0-rc.6",
    "mocha": "^5.2.0",
    "standard": "^11.0.1"
  },
  "engines": {
    "node": "0.10.x"
  },
  "scripts": {
    "start": "hubot --adapter slack",
    "test": "standard --fix && npm run mocha ./tests/**/*.spec.js",
    "mocha": "mocha --recursive --timeout 10000 --exit"
  },
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "pre-push": "npm test"
    }
  }
}
